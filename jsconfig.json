{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "@db/*": ["src/db/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@core/*": ["src/core/*"],
            "@modules/*": ["src/modules/*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}